{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "module": "ESNext",
    "target": "ES6",
    "checkJs": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea"
  ]
}